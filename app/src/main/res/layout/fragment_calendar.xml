<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <View
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#3a67b3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="81dp"
        android:background="#234379" />

    <View
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="84dp"
        android:background="#ffffff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="138dp"
        android:background="#CCCCCC" />

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/nav3_top_1create"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/nav_top_1create_selected" />


        <TextView
            android:id="@+id/nav3_top_1create_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:layout_alignStart="@+id/nav3_top_1create"
            android:text="@string/create"
            android:textSize="14sp"
            android:textColor="#011069"   />

        <Button
            android:id="@+id/nav3_top_2todolist"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="90dp"
            android:layout_alignTop="@+id/nav3_top_1create"
            android:background="@drawable/nav_top_2todolist_selected" />

        <TextView
            android:id="@+id/nav3_top_2todolist_text"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/nav3_top_1create_text"
            android:layout_alignStart="@+id/nav3_top_2todolist"
            android:text="@string/todos"
            android:textSize="14sp"
            android:textColor="#011068"  />


        <Button
            android:id="@+id/nav3_top_3calendar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="180dp"
            android:layout_alignTop="@+id/nav3_top_1create"
            android:background="@drawable/nav_top_3calendar" />

        <TextView
            android:id="@+id/nav3_top_3calendar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/nav3_top_1create_text"
            android:layout_marginStart="175dp"
            android:text="@string/calendar"
            android:textSize="14sp"
            android:textColor="#ffffff"  />


        <Button
            android:id="@+id/nav3_top_4settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="270dp"
            android:layout_alignTop="@+id/nav3_top_1create"
            android:background="@drawable/nav_top_4settings_selected" />

        <TextView
            android:id="@+id/nav3_top_4settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/nav3_top_1create_text"
            android:layout_alignStart="@+id/nav3_top_4settings"
            android:text="@string/settings"
            android:textSize="14sp"
            android:textColor="#011069" />

        <TextView
            android:id="@+id/f_create_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:text="@string/app_title_name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

    </RelativeLayout>







    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_cal_timeframe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/cal_showday" />


        <TextView
            android:id="@+id/cal_day_text"
            android:layout_width="37dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="1dp"
            android:gravity="center"
            android:text="DAY"
            android:textSize="14sp"
            android:textColor="#011069"   />



        <Button
            android:id="@+id/cal_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_button_back" />


        <TextView
            android:id="@+id/cal_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="14dp"
            android:text="12.20.2015"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/cal_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="200dp"
            android:layout_alignTop="@+id/cal_left"
            android:background="@drawable/selector_button_forward" />


        <Button
            android:id="@+id/cal_exportPDF"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/selector_button_pdf" />



    </RelativeLayout>


    <ListView
        android:id="@+id/lw_calendar"
        android:layout_marginTop="140dp"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="465dp">
    </ListView>


    <TextView
        android:id="@+id/calendar_nothingfound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#FF1212"
        android:text="@string/no_tasks_found" />




</RelativeLayout>