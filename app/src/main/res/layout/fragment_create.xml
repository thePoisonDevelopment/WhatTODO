<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#3a67b3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="81dp"
        android:background="#234379" />

<RelativeLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <Button
        android:id="@+id/nav1_top_1create"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/nav_top_1create" />


    <TextView
        android:id="@+id/nav1_top_1create_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:layout_alignStart="@+id/nav1_top_1create"
        android:text="@string/create"
        android:textSize="14sp"
        android:textColor="#ffffff"   />

    <Button
        android:id="@+id/nav1_top_2todolist"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="90dp"
        android:layout_alignTop="@+id/nav1_top_1create"
        android:background="@drawable/nav_top_2todolist_selected" />

    <TextView
        android:id="@+id/nav1_top_2todolist_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nav1_top_1create_text"
        android:layout_alignStart="@+id/nav1_top_2todolist"
        android:text="@string/todos"
        android:textSize="14sp"
        android:textColor="#011069"  />


    <Button
        android:id="@+id/nav1_top_3calendar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="180dp"
        android:layout_alignTop="@+id/nav1_top_1create"
        android:background="@drawable/nav_top_3calendar_selected" />

    <TextView
        android:id="@+id/nav1_top_3calendar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nav1_top_1create_text"
        android:layout_marginStart="175dp"
        android:text="@string/calendar"
        android:textSize="14sp"
        android:textColor="#011069"  />


    <Button
        android:id="@+id/nav1_top_4settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="270dp"
        android:layout_alignTop="@+id/nav1_top_1create"
        android:background="@drawable/nav_top_4settings_selected" />

    <TextView
        android:id="@+id/nav1_top_4settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nav1_top_1create_text"
        android:layout_alignStart="@+id/nav1_top_4settings"
        android:text="@string/settings"
        android:textSize="14sp"
        android:textColor="#011069" />

    <TextView
        android:id="@+id/f_create_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:text="@string/app_title_name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

</RelativeLayout>


<RelativeLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="90dp"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">


<RelativeLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginStart="0dp"
    android:background="#ECECEC"
    android:orientation="vertical">

    <View
        android:layout_width="230dp"
        android:layout_height="1dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#D8D7D7" />

    <View
        android:layout_width="1dp"
        android:layout_height="62dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#D8D7D7" />

    <View
        android:layout_width="231dp"
        android:layout_height="1dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="62dp"
        android:background="#D8D7D7" />


    <View
        android:layout_width="1dp"
        android:layout_height="63dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="0dp"
        android:background="#D8D7D7" />


    <TextView
        android:id="@+id/create_hint_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:text="@string/priority"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/f_create_prio_1"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/todo_prio_1" />

    <Button
        android:id="@+id/f_create_prio_2"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_alignTop="@+id/f_create_prio_1"
        android:background="@drawable/todo_prio_2" />

    <Button
        android:id="@+id/f_create_prio_3"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="100dp"
        android:layout_alignTop="@+id/f_create_prio_1"
        android:background="@drawable/todo_prio_3_selected" />

    <Button
        android:id="@+id/f_create_prio_4"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="150dp"
        android:layout_alignTop="@+id/f_create_prio_1"
        android:background="@drawable/todo_prio_4" />

    <Button
        android:id="@+id/f_create_prio_5"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="200dp"
        android:layout_alignTop="@+id/f_create_prio_1"
        android:background="@drawable/todo_prio_5" />


</RelativeLayout>


    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="240dp"
        android:background="#ECECEC"
        android:orientation="vertical">

        <View
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="#D8D7D7" />

        <View
            android:layout_width="1dp"
            android:layout_height="62dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="#D8D7D7" />

        <View
            android:layout_width="61dp"
            android:layout_height="1dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="62dp"
            android:background="#D8D7D7" />

        <View
            android:layout_width="1dp"
            android:layout_height="63dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="0dp"
            android:background="#D8D7D7" />


        <TextView
            android:id="@+id/create_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:text="@string/status"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_c_status"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/todo_icon_0todo" />

    </RelativeLayout>


<RelativeLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="70dp"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">


    <TextView
        android:id="@+id/create_hint_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:text="@string/todo_name_caption"
        android:textColor="#000000"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/create_taskname"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/create_hint_1"
        android:ems="10"
        android:background="@drawable/inputtext_sendemail"
        android:inputType="textMultiLine"
        android:maxLength="256"
        android:gravity="start"
        android:scrollbars="vertical"
        android:hint="@string/todo_name" />

    <TextView
        android:id="@+id/create_label_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_alignStart="@+id/create_hint_1"
        android:text="@string/label"
        android:textColor="#000000"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/create_label_input"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="170dp"
        android:layout_alignStart="@+id/create_label_label"
        android:ems="10"
        android:background="@drawable/inputtext_sendemail"
        android:maxLength="12"
        android:gravity="start"
        android:scrollbars="vertical"
        android:hint="@string/label_" />


    <Button
        android:id="@+id/btn_label_color"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/create_label_input"
        android:layout_marginStart="270dp"
        android:background="@drawable/label_color_none_selected" />

    <View
        android:id="@+id/planned_viewbtn"
        android:layout_width="105dp"
        android:layout_height="39dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="212dp"
        android:background="#BFE5FF" />

    <TextView
        android:id="@+id/planned_lbl"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="213dp"
        android:layout_marginStart="0dp"
        android:gravity="center"
        android:text="@string/planned_on_"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/planned_txt"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_alignStart="@+id/planned_lbl"
        android:text="XX.XX.XXXX"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp" />


    <Button
        android:id="@+id/create_puttodays_date"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="218dp"
        android:background="@drawable/selector_button_calendar" />


    <View
        android:id="@+id/deadline_viewbtn"
        android:layout_width="105dp"
        android:layout_height="39dp"
        android:layout_marginStart="195dp"
        android:layout_alignTop="@+id/planned_viewbtn"
        android:background="#BFE5FF" />

    <TextView
        android:id="@+id/deadline_lbl"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/planned_lbl"
        android:layout_marginStart="195dp"
        android:gravity="center"
        android:text="@string/deadline_"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/deadline_txt"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/planned_txt"
        android:layout_alignStart="@+id/deadline_lbl"
        android:text="XX.XX.XXXX"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp" />


</RelativeLayout>

    <Button
        android:id="@+id/create_btn_create"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:textColor="#ffffff"
        android:background="#35A0E7"
        android:gravity="center"
        android:text="@string/btn_create" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:text="version 2.0"
        android:textSize="18sp"
        android:textColor="#011069" />

</RelativeLayout>


</RelativeLayout>